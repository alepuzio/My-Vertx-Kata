                    <addClasspath>true</addClasspath>
		            <mainClass>net.alepuzio.myvertxkata.App</mainClass>
                    <classpathPrefix>lib/</classpathPrefix>
                </manifest>
              </archive>
            </configuration>
          </plugin>
